configuration {
	font: "Victor Mono Bold 13";
	line-margin: 10;
	lines: 10;
	columns: 2;

    display-ssh:    "";
    display-run:    "";
    display-drun:   "";
    display-window: "";
    display-combi:  "";
    show-icons:     false;
	modi: 			"drun";
}

listview {
	lines: 6;
	columns: 2;
}

* {
    foreground:  #F5E0DC;
    backlight:   #1d1;
    background-color:  #1E1D2F;
    highlight:     underline bold #F5E0DC;
    transparent: rgba(46,52,64,0);
}

window {
	width: 30%;
    location: center;
    anchor:   center;
    padding: 20px;
    border:  0px;
    border-radius: 0px;

    background-color: #1E1D2F;
    spacing: 0;
    children:  [mainbox];
    orientation: horizontal;
}

mainbox {
    spacing: 0;
    children: [ inputbar, message, listview ];
}

message {
    color: #F5E0DC;
    padding: 5;
    border-color: #F28FAD;
    border:  0px 2px 2px 2px;
    background-color: #F28FAD;
}

inputbar {    /* type bar */
    color: #F5E0DC;
    padding: 11px;
    background-color: #1E1D2F;

    border: 1px;
    border-radius: 0px;
    border-color: #F28FAD;
}

entry, prompt, case-indicator {
    text-font: inherit;
    text-color:inherit;
}

prompt {
    margin: 0px 0.3em 0em 0em ;
}

listview {    /* program box */
    padding: 20px;
    border-radius: 0px;
    border-color: #F28FAD;
    border: 0px 1px 1px 1px;
    background-color: #1E1D2F;
    dynamic: false;
}

element {
    background-color: #1E1D2F;
    padding: 7px;
    vertical-align: 0.5;
    border-radius: 0px;
    color: #f00;
    text-color: #1d1;
}
element selected.normal {   /* selected program */
	background-color: #F28FAD;
	text-color: #1E1D2F;
}
element-text, element-icon {
    background-color: inherit;
    text-color: #1E1D2F;
}

button {
    padding: 6px;
    color: #1d1;
    horizontal-align: 0.5;

    border: 2px 0px 2px 2px;
    border-radius: 4px 0px 0px 4px;
    border-color: #f00;
}

button selected normal {
    border: 2px 0px 2px 2px;
    border-color: #1d1;
}
